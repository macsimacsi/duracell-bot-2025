<% stat_cards = [
  { icon: "user-check", color: "success", label: "Participantes", value: @total_participants || 0 },
  { icon: "users", color: "success", label: "Participaciones", value: @total_participations || 0 },
  { icon: "user-plus", color: "primary", label: "Participaciones por dÃ­a", value: @total_participations_today || 0 }
] %>

<% stat_cards.each do |card| %>
  <div class="col-md-4 col-sm-6 mb-3">
    <div class="card shadow-sm border-0">
      <div class="card-body text-center">
        <i class="text-<%= card[:color] %> mb-2" style="height: 30px; width: 30px;" data-feather="<%= card[:icon] %>"></i>
        <h4 class="fw-bold"><%= number_with_delimiter(card[:value], delimiter: '.') %></h4>
        <h5 class="text-muted"><%= card[:label].presence || '-' %></h5>
      </div>
    </div>
  </div>
<% end %>
