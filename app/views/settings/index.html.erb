
<h1>Configuraciones</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Activo</th>
      <th>Fecha inicio</th>
      <th>Fecha fin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= setting.name %></td>
        <td><%= generic_active setting.active %></td>
        <td><%= py_date setting.date_start %></td>
        <td><%= py_date setting.date_end %></td>
        <td><%= link_to 'Ver', setting, class:'btn btn-outline-secondary' %></td>
        <td><%= link_to 'Editar', edit_setting_path(setting), class:'btn btn-outline-primary' %></td>
        <td><%= link_to 'Borrar', setting, method: :delete, data: { confirm: '¿Estás seguro?' }, class:'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo', new_setting_path, class:'btn btn-outline-info' %>
