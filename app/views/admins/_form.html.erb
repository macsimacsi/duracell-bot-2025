                                    <% if admin.errors.any? %>
                                        <div class="alert alert-danger alert-dismissible" role="alert">
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        <div class="alert-message">
                                            <strong>Error.</strong> No pudo guardarse debido a los siguientes errores
                                        </div>
                                        </div>
                                    <% end %>

                                    <div class="mb-3">
                                        <%= form.label :role_id, class: 'form-label' %>
                                        <%= form.select :role_id, Role.all.collect { |c| [c.name, c.id] }, {include_blank: true}, class: 'form-select' %>
                                    </div>

                                    <div class="mb-3">
                                        <%= form.label :email, class: 'form-label' %>
                                        <%= form.text_field :email, class: 'form-control' %>
                                    </div>

                                    <div class="mb-3">
                                        <%= form.label :password, class: 'form-label' %>
                                        <%= form.password_field :password, class: 'form-control' %>
                                    </div>

                                    <div class="mb-3">
                                        <%= form.label :password_confirmation, class: 'form-label' %>
                                        <%= form.password_field :password_confirmation, class: 'form-control' %>
                                    </div>

                                    <div class="actions">
                                        <%= button_tag( :class => "btn btn-primary mt-2") do %>
                                        <i class="fas fa-fw fa-save"></i> Guardar
                                        <% end %>
                                    </div>